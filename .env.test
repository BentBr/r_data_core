# Database Connection
DATABASE_URL=postgres://postgres:postgres@pg-test.rdatacore.docker:5433/rdata_test
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30

# Server Configuration
API_HOST=0.0.0.0
API_PORT=80
API_USE_TLS=false
API_ENABLE_DOCS=true
CORS_ORIGINS=*

# JWT Authentication
JWT_SECRET=test_secret_key
JWT_EXPIRATION=86400  # 24 hours in seconds

# Redis Cache
REDIS_URL=redis://redis.rdatacore.docker:6379
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes in seconds
CACHE_MAX_SIZE=10000

# Logging
LOG_LEVEL=debug
# RUST_LOG is kept for compatibility
RUST_LOG=debug

# Workflow Configuration
WORKFLOW_WORKER_THREADS=4
WORKFLOW_DEFAULT_TIMEOUT=300
WORKFLOW_MAX_CONCURRENT=10

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# App Environment
APP_ENV=test