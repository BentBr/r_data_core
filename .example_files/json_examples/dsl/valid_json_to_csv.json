{
  "steps": [
    {
      "from": {
        "type": "format",
        "source": {
          "source_type": "uri",
          "config": {
            "uri": "http://example.com/data.json"
          },
          "auth": null
        },
        "format": {
          "format_type": "json",
          "options": {}
        },
        "mapping": {
          "user.name": "first_name",
          "user.surname": "last_name",
          "user.email": "email"
        }
      },
      "transform": {
        "type": "concat",
        "target": "full_name",
        "left": {
          "kind": "field",
          "field": "first_name"
        },
        "separator": " ",
        "right": {
          "kind": "field",
          "field": "last_name"
        }
      },
      "to": {
        "type": "format",
        "output": {
          "mode": "download"
        },
        "format": {
          "format_type": "csv",
          "options": {
            "has_header": true,
            "delimiter": ","
          }
        },
        "mapping": {
          "first_name": "first_name",
          "last_name": "last_name",
          "full_name": "full_name",
          "email": "email"
        }
      }
    }
  ]
}

