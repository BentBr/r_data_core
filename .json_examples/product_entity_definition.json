      "required": true,
      "indexed": true,
      "filterable": true,
      "constraints": {
        "pattern": "^[A-Z0-9]{2,20}$",
        "error_message": "SKU must contain 2-20 uppercase letters and numbers only"
      },
      "ui_settings": {
        "display_order": 1,
        "section": "Basic Information"
      }
    },
    {
      "name": "name",
      "display_name": "Product Name",
      "description": "Name of the product",
      "field_type": "String",
      "required": true,
      "indexed": true,
      "filterable": true,
      "constraints": {
        "min_length": 3,
        "max_length": 100
      },
      "ui_settings": {
        "display_order": 2,
        "section": "Basic Information"
      }
    },
    {
      "name": "description",
